{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "lib": ["ES2021", "DOM"],
    "types": ["vite/client"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.d.ts",
    "scripts/**/*.ts",
    "forge.config.ts",
    "vite.*.config.ts"
  ],
  "exclude": ["dist", "dist-native", "out", "node_modules", "native"]
}
